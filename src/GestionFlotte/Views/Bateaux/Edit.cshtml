@model GestionFlotte.Models.Bateau

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Bateau</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Nom" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TypeBateauID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="TypeBateauID" class="form-control" asp-items="ViewBag.TypeBateauID"></select>
                <span asp-validation-for="TypeBateauID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <h4>&Eacute;quipage</h4>
            <table style="width: 100%;">
                <tr style="display:flex;">
                    <th style="flex-grow:1;">
                        Nom
                    </th>
                    <th style="flex-grow:1;">
                        Pr&eacute;nom
                    </th>
                    <th style="flex-grow:1;">
                        Ma&icirc;trise
                    </th>
                </tr>
                @Html.EditorFor(model => model.Marins)
            </table>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
