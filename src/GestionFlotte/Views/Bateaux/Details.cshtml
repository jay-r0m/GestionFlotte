@model GestionFlotte.Models.Bateau

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bateau</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TypeBateau)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TypeBateau.Designation)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Marins)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Équipage</th>
                    <th>Poste</th>
                </tr>
                @foreach (var item in Model.Marins)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prenom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Maitrises)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
