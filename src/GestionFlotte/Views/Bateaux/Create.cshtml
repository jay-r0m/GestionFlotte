@model GestionFlotte.Models.Bateau

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Bateau</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nom" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TypeBateauID" class="col-md-2 control-label">Type de Bateau</label>
            <div class="col-md-10">
                <select asp-for="TypeBateauID" class ="form-control" asp-items="ViewBag.TypeBateauID"></select>
            </div>
        </div>
        <hr />
        <h4>&Eacute;quipage</h4>
        <div class="form-group">
            <div id="membres-minimum">
                <h5>Membres minimum</h5>
            </div>
            <hr />
        </div>
        <div class="form-group">
            <div id="membres-additionnels">
                <h5>Membres additionnels</h5>
                <div id="0" style="display:flex;">
                    <input type="text" placeholder="Nom" class="form-control"  style="flex-grow: 1;"/>
                    <input type="text" placeholder="Prenom" class="form-control"  style="flex-grow: 1;"/>
                    <select class="form-control" style="flex-grow: 1;">
                        @foreach (var item in ViewBag.Roles)
                        {
                            <option value=@item.RoleID>@item.Nom</option>
                        }
                    </select>
                    <input type="button" class="form-control add-marin" onclick="false;" value="Ajouter"  style="flex-grow: 1;"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}